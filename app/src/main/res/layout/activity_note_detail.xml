<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd">

    <EditText
        android:id="@+id/note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Title"
        android:ems="10"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_margin="10dp"
        android:background="#fff"
        android:hint="Enter Title"/>

    <EditText
        android:id="@+id/note_text"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/note_title"
        android:text="Enter note details"
        android:textSize="20sp"
        tools:background="#fff"
        android:gravity="top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Enter Item Detail"/>

    <Button
        android:text="SAVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:id="@+id/save_button"
        android:layout_alignParentBottom="true" />

    <CheckBox
        android:text="Mark Completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_text"
        android:layout_alignStart="@+id/note_text"
        android:layout_marginStart="20dp"
        android:layout_marginTop="29dp"
        android:id="@+id/completed_chcekbox"
        android:hint="Mark Completed"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Enter a Category"
        android:ems="10"
        android:id="@+id/Category_editText"
        android:layout_below="@+id/completed_chcekbox"
        android:layout_alignEnd="@+id/save_button"
        android:hint="Enter Category"/>

    <EditText
        android:id="@+id/txtdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="Select a  due date"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/detail_imageView"
        android:layout_above="@+id/save_button"
        android:layout_alignEnd="@+id/note_text"
        android:layout_marginBottom="41dp"
        android:background="@android:color/darker_gray" />


</RelativeLayout>